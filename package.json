{
  "name": "javascript-ethers-hardhat-beacon-reader-example",
  "version": "1.0.0",
  "description": "An example project for reading beacon values from a smart contract",
  "license": "MIT",
  "scripts": {
    "build": "hardhat compile",
    "deploy:localhost": "hardhat deploy --network localhost --reset",
    "deploy:ropsten": "hardhat deploy --network ropsten --reset",
    "deploy:rinkeby": "hardhat deploy --network rinkeby --reset",
    "deploy:goerli": "hardhat deploy --network goerli --reset",
    "deploy:polygon-mumbai": "hardhat deploy --network polygon-mumbai --reset",
    "eth-node": "hardhat node",
    "read-beacon:localhost": "hardhat run scripts/read-beacon.js --network localhost",
    "read-beacon:ropsten": "hardhat run scripts/read-beacon.js --network ropsten",
    "read-beacon:rinkeby": "hardhat run scripts/read-beacon.js --network rinkeby",
    "read-beacon:goerli": "hardhat run scripts/read-beacon.js --network goerli",
    "read-beacon:polygon-mumbai": "hardhat run scripts/read-beacon.js --network polygon-mumbai",
    "test": "hardhat test",
    "whitelist-reader:localhost": "hardhat run scripts/whitelist-reader.js --network localhost",
    "whitelist-reader:ropsten": "hardhat run scripts/whitelist-reader.js --network ropsten",
    "whitelist-reader:rinkeby": "hardhat run scripts/whitelist-reader.js --network rinkeby",
    "whitelist-reader:goerli": "hardhat run scripts/whitelist-reader.js --network goerli",
    "whitelist-reader:polygon-mumbai": "hardhat run scripts/whitelist-reader.js --network polygon-mumbai"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.3",
    "hardhat": "^2.8.2",
    "hardhat-deploy": "^0.10.5"
  },
  "dependencies": {
    "@api3/services": "^0.1.6"
  }
}
